<!-- ko with: home -->
<div ng-app="costumerFunctions">



    <div ng-controller="micontrolador">

        <form ng-submit="getById()">

            Id: <input type="text" ng-model="id" />

            <button type="submit">Get By Id</button>

        </form>

        <div>

            <button type="button" ng-click="getAll()">Get All</button>

            <button type="button" ng-click="clean()">Clean</button>

        </div>



        <div ng-show="error" class="error">

            {{ error }}

        </div>



        <div ng-show="arreglo">

            <div ng-repeat="item in arreglo">

                <div class="success">

                    UserID : {{ item.userId | currency : $$ : 5}}

                    Title : {{ item.title }}

                </div>

            </div>

        </div>



    </div>

</div>